<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GestionUsuarios</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GestionUsuarios.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <div class="px-3 py-2 bg-dark border-bottom">
            <div class="container">
                <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
                    <a href="/"
                        class="d-flex align-items-center my-2 my-lg-0 me-lg-auto text-white text-decoration-none">
                        <i class="bi bi-people-fill fs-1"></i>
                    </a>

                    <ul
                        class="nav col-12 align-items-center justify-content-center col-lg-auto my-2 my-md-0 text-small">
                        <li>
                            <a href="/" class="a_header text-white">
                                <i class="bi fs-3 bi-house"></i>
                                <p>Home</p>
                            </a>
                        </li>
                        <li>
                            <a asp-area="" asp-controller="Usuario" asp-action="Crear" class="a_header text-primary">
                                <i class="bi fs-3 bi-person-fill-add"></i>
                                <p>Crear</p>
                            </a>
                        </li>
                        <li>
                            <a asp-area="" asp-controller="Usuario" asp-action="Index" class="a_header text-white">
                                <i class="bi fs-3 bi-person-lines-fill"></i>
                                <p>Mostrar</p>
                            </a>
                        </li>
                        <li>
                            <a asp-area="" asp-controller="Usuario" asp-action="Editar" class="a_header text-warning">
                                <i class="bi fs-3 bi-person-fill-gear"></i>
                                <p>Editar</p>
                            </a>
                        </li>
                        <li>
                            <a asp-area="" asp-controller="Usuario" asp-action="Eliminar" class="a_header text-danger">
                                <i class="bi fs-3 bi-person-fill-dash"></i>
                                <p>Eliminar</p>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - CrudWebUsuarios - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
